<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="CircularProgress" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Distance_Far" parent="Default">
        <item name="third">#00FF00</item>
    </style>

    <style name="Distance_Medium" parent="Default">
        <item name="second">#FFFF00</item>
    </style>

    <style name="Distance_Close" parent="Default">
        <item name="first">#FF0000</item>
    </style>

    <style name="Default">
        <item name="first">#000000</item>
        <item name="second">#000000</item>
        <item name="third">#000000</item>
    </style>

    <style name="Up_Distance_Far" parent="Default">
        <item name="third">#00FF00</item>
    </style>

</resources>
